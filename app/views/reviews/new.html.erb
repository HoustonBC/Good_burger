<h1>Review for <%= @restaurant.name %></h1>
<%= form_for [@restaurant, @review] do |f| %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_area :title %>
</div>

<div class="field">
  <%= f.label :body, "Description" %>
  <%= f.text_area :body %>
</div>

<div class="field">
  <%= f.label :rating, "Rating (Please select 1-5, from Worst to Best)" %>
  <%= f.text_area :rating %>
</div>


<div class="field">
  <%= f.label :price, "Price (Please select 1-5, from Cheapest to Most Expensive)" %>
  <%= f.text_area :price %>
</div>

<div class="actions">
  <%= f.submit "Add Review" %>
</div>

<% end %>
