<h1>Submit Restaurant</h1>

<%= form_for(@restaurant) do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_area :name %>
</div>

<div class="field">
  <%= f.label :picture %>
  <%= f.text_area :picture %>
</div>
<div class="field">
  <%= f.label :address %>
  <%= f.text_area :address %>
</div>
<div class="field">
  <%= f.label :city %>
  <%= f.text_area :city %>
</div>
<div class="field">
  <%= f.label :state %>
  <%= f.text_area :state %>
</div>
<div class="field">
  <%= f.label :zip %>
  <%= f.text_area :zip %>
</div>
<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<div class="actions">
  <%= f.submit "Add Restaurant" %>
</div>
<% end %>
